<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".layout_handle.fragments.nutrition"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">


        <androidx.cardview.widget.CardView
            android:background="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10dp">


            <Spinner
                android:autofillHints="Month"
                android:gravity="center"
                android:id="@+id/monthSpinner"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/rounded_corners" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginEnd="5dp"
            android:background="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/calender"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/calender"
                android:layout_margin="10dp"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:background="@color/white"
        app:cardCornerRadius="30dp"
        app:cardElevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp">



    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:background="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp">
        <LinearLayout
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">
                <TextView
                    android:id="@+id/Breakfast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Breakfast"
                    android:textColor="#03A9F4"
                    android:textSize="30sp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/Breakfast_energy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="240 kcal"
                    android:textColor="#03A9F4"
                    android:textSize="20sp"
                    android:textStyle="normal|bold" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:background="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:background="@color/white"
                        android:id="@+id/break1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        >

                        <TextView
                            android:id="@+id/Breakfast_food"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="Milk Eggs"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="normal|bold" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/Img_breakfast_fruit"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/breakfast" />

                    </RelativeLayout>



                    <RelativeLayout
                        android:background="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="Banana"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="normal|bold" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/Img_breakfast"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/supp" />



                    </RelativeLayout>

                </LinearLayout>





            </androidx.cardview.widget.CardView>
        </LinearLayout>




    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:background="#2196F3"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp">
        <LinearLayout
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/Lunch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Lunch"
                    android:textColor="#03A9F4"
                    android:textSize="30sp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/lunch_energy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="240 kcal"
                    android:textColor="#03A9F4"
                    android:textSize="20sp"
                    android:textStyle="normal|bold" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:background="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">

                    <RelativeLayout
                        android:id="@+id/lunch1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        >

                        <TextView
                            android:id="@+id/lunch_food"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="custurd"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="normal|bold" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/Img_lunch_fruit"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/breakfast" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:background="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="Apple Juice"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="normal|bold" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/Img_lunch"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/supp" />



                    </RelativeLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnsplash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:elevation="20dp"
                        android:text="Request Diet Review"
                        android:textColor="#FFFFFF"
                        app:backgroundTint="#03A9F4"
                        app:cornerRadius="15dp" />

                </LinearLayout>





            </androidx.cardview.widget.CardView>
        </LinearLayout>




    </androidx.cardview.widget.CardView>



</LinearLayout>