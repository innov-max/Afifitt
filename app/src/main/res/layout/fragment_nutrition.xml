<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".layout_handle.fragments.nutrition"
    android:orientation="vertical"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="My Nutrition"
        android:textStyle="bold|normal"
        android:textSize="21sp"
        android:layout_centerInParent="true"
        android:paddingTop="20dp"
        android:textColor="@color/black"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/notify"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:paddingTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="40dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/white"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal">
    </com.github.mikephil.charting.charts.PieChart>

    </androidx.cardview.widget.CardView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My nutrition activity"
        android:textStyle="normal"
        android:paddingStart="20dp"
        android:textSize="18sp"
        android:paddingTop="10dp"
        android:textColor="@color/black"/>
    <Spinner
        android:id="@+id/spinnerTimePeriod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/spinner_background"
        android:prompt="@string/select_time_period"/>
</LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today's Meals"
        android:textStyle="normal"
        android:paddingStart="20dp"
        android:textSize="18sp"
        android:paddingTop="10dp"
        android:textColor="@color/black"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardElevation="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/white"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="20dp">
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        </ScrollView>
    </androidx.cardview.widget.CardView>



</LinearLayout>