void setup()
{
  Serial.begin(9600);

  // Initialize the OLED object
  if (!display.begin(SSD1306_SWITCHCAPVCC, SCREEN_ADDRESS))
  {
    Serial.println(F("SSD1306 allocation failed"));
    for (;;)
      ; // Don't proceed, loop forever
  }

  // Clear the buffer.
  display.clearDisplay();
  display.display();

  Serial.println("Connecting to WiFi...");

  // Connecting to WiFi
  WiFi.begin(ssid, pass);
  while (WiFi.status() != WL_CONNECTED)
  {
    delay(500);
    Serial.print(".");
  }
  Serial.println("\nWiFi connected");

  // Connecting to Firebase
  Firebase.begin(FIREBASE_HOST, FIREBASE_AUTH);
  Serial.println("Firebase connected");

  Serial.println("Place your index finger on the sensor.");

  if (!particleSensor.begin(Wire, I2C_SPEED_FAST))
  {
    Serial.println("Heartbeat sensor failed, Heartbeat sensor not found");
    while (1)
      ;
  }

  particleSensor.setup();
  particleSensor.setPulseAmplitudeRed(0x0A);
  particleSensor.setPulseAmplitudeGreen(0);
  delay(2000);
}
void loop()
{
  for (int i = 0; i < 500; i++)
    Heart_Beat();

  // Display the first bitmap at the center top
  showBitmap();
  display.display();

  delay(2000);  // Wait for 2 seconds

  // Clear only the area where the first bitmap was displayed
  display.fillRect(0, 0, bitmap1_width, bitmap1_height, BLACK);
  display.display();

  delay(200);  // A short delay for better visibility

  // Display the second bitmap at the center top
  showBitmap2();
  display.display();

  // Display BPM, Avg BPM, and Blood Oxygen values to the right of the bitmap
  display.setTextSize(1);
  display.setTextColor(WHITE);
  display.setCursor(50, 0);
  display.print("BPM: ");
  display.println(beatsPerMinute);
  display.setCursor(50, 10);
  display.print("Avg BPM: ");
  display.println(beatAvg);
  display.setCursor(50, 20);
  display.print("SPO2: ");
  display.println(bloodOxygen);
  display.display();

  delay(2000);  // Wait for 2 seconds

  // Clear only the area where the second bitmap was displayed
  display.fillRect(0, 0, bitmap1_width, bitmap1_height, BLACK);
  display.display();

  delay(200);  // A short delay for better visibility

  Serial.print("BPM=");
  Serial.print(beatsPerMinute);
  Serial.print(", Avg BPM=");
  Serial.print(beatAvg);
  Serial.print(", Blood Oxygen=");
  Serial.print(bloodOxygen);
  Serial.println();

  // Sending data to Firebase
  FirebaseJson json;
  json.set("bpm", beatsPerMinute);
  json.set("avgBpm", beatAvg);
  json.set("bloodOxygen", bloodOxygen);
  json.set("timestamp/.sv", "timestamp");
  Serial.printf("Push data with timestamp... %s\n", Firebase.pushJSON(firebaseData, "/bpm", json) ? "ok" : firebaseData.errorReason().c_str());

  delay(1000);  // Wait for 1 second
}






void Heart_Beat()
{
  long irValue = particleSensor.getIR();
  long redValue = particleSensor.getRed();

  if (checkForBeat(irValue) == true)
  {
    long delta = millis() - lastBeat;
    lastBeat = millis();
    beatsPerMinute = 60 / (delta / 1000.0);
    if (beatsPerMinute < 255 && beatsPerMinute > 20)
    {
      rates[rateSpot++] = (byte)beatsPerMinute;
      rateSpot %= RATE_SIZE;

      beatAvg = 0;
      for (byte x = 0; x < RATE_SIZE; x++)
        beatAvg += rates[x];
      beatAvg /= RATE_SIZE;
    }
  }

  if (irValue < 50000)
  {
    beatsPerMinute = 0;
    beatAvg = 0;
    bloodOxygen = 0;
  }
  else
  {
    bloodOxygen = calculateBloodOxygen(irValue, redValue);
  }
}

int calculateBloodOxygen(long irValue, long redValue)
{
  float ratio = (float)redValue / irValue;
  float spo2 = 110 - 25 * ratio;
  spo2 = constrain(spo2, 0, 100);
  int spo2Int = round(spo2);
  return spo2Int;
}
